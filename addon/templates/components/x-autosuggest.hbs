<ul class='selections'>
  {{#each destination key="@index" as |selection|}}
    <li class="selection">
      <a class="as-close" {{action "removeSelection" selection}}>x</a>
      {{yield selection}}
      {{display-helper selection searchPath}}
    </li>
  {{/each}}
  <li>
    <input type="text" {{action "removeFocus" on="focus-out"}} class="autosuggest"/>
  </li>
</ul>
<div {{bind-attr class=':results hasQuery::hdn'}}>
  <ul class='suggestions'>
    {{#each displayResults key="@index" as |result|}}
      <li {{action "addSelection" result}} {{bind-attr class=":result result.active"}}>
        <span class="result-name">
          {{yield result}}
          {{display-helper result searchPath}}
        </span>
      </li>
    {{else}}
      <li class='no-results'>No Results.</li>
    {{/each}}
  </ul>
</div>
